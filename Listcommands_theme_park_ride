riders_per_ride = 3  # Num riders per ride to dispatch

line = []  # The line of riders
num_vips = 0  # Track number of VIPs at front of line

menu = ('(1) Reserve place in line.\n'  # Add rider to line
        '(2) Reserve place in VIP line.\n'  # Add VIP
        '(3) Dispatch riders.\n'  # Dispatch next ride car
        '(4) Print riders.\n' 
        '(5) Find place in line.\n'  # Find the current place in line
        '(6) Remove name.\n' #Enter a name to remove rider from line
        '(7) Exit.\n\n')

user_input = input(menu).strip().lower()

while user_input != '7':
    if user_input == '1':  # Add rider 
        name = input('Enter name:').strip().lower()
        print(name)
        line.append(name)

    elif user_input == '2':  # Add VIP
        VIP = input('Enter VIP name:').strip().lower()
        print(VIP)
        line.insert(num_vips, VIP)
        num_vips += 1

    elif user_input == '3':  # Dispatch ride
        dispatch_count = min(riders_per_ride, len(line))
        dispatched = []
        for _ in range(dispatch_count):
            person = line.pop(0)
            dispatched.append(person)
            if num_vips > 0:
                num_vips -= 1  

        print('Dispatched:', dispatched)

    elif user_input == '4':  # Print riders waiting in line
        print(f'{len(line)} person(s) waiting: {line}')
        
    elif user_input == '5':
        name = input('Enter name:').strip().lower()
        print(name)
        if name in line:
            current_place = line.index(name) + 1
            print(f'The current position of {name} is: {current_place}')
        else:
            print(f'Rider {name} not found.')

    elif user_input == '6': 
        name = input('Enter name:').strip().lower()
        print(name)
        if name in line:
            line.remove(name)
            print(f'Removed Rider {name}')
        else:
            print(f'Rider {name} not found')
        # The rider can enter a name to remove the rider from the line.

    else:
        print('Unknown menu option')

    user_input = input('Enter command: ').strip().lower()
    print(user_input)
